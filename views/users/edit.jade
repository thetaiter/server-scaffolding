extends ../layout

block content
    h1.
        User ID: #{id}
    form(action='/users/#{id}/edit', method='post', name='updateuser', enctype='application/x-www-form-urlencoded')
        p Name:
            input#inputName(type='text', value='#{name}', name='name')
        p Username:
            input#inputUsername(type='text', value='#{username}', name='username')
        p Email:
            input#inputEmail(type='text', value='#{email}', name='email')
        p Password:
            input#inputPassword(type='password', name='password')
        p
            input(type='hidden', value='PUT', name='_method')
        p
            button#submitButton(type='submit') Update
